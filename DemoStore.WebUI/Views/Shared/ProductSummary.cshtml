@model DemoStore.Core.Entities.Product
<div class="item">

    <div style="float: left; margin-right: 20px">
        <img width="75" height="75" src="@Url.Content("~/Content/images/productimages/"+ Model.ImageFile)" />
    </div>
    <br />
    <h3>@Model.Name</h3>
    @Model.Description
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        @Html.HiddenFor(prod => prod.ProductID)
        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
        <input type="submit" class="btn btn-primary" value="+ Add to Cart" />
    }
    <h4>@Model.Price.ToString("c")</h4>
</div>
